<h1>Liste des doudous</h1>

<table class="table table-striped>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th width="500"></th>
    </tr>
  </thead>

  <tbody>
    <% @bears.each do |bear| %>
      <tr>
        <td><%= bear.name %></td>
        <td><%= bear.description %></td>
        <td>
            <%= link_to 'Afficher', bear, :method=> "get" , :class => "btn btn-primary"%>
            <%= link_to 'Modifier', edit_bear_path(bear), :method=> "get" , :class => "btn btn-primary"%>
            <%= link_to 'Supprimer', bear, method: :delete, data: { confirm: 'Etes-vous sur ?' }, :method=> "get" , :class => "btn btn-danger"%>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bear', new_bear_path %>
